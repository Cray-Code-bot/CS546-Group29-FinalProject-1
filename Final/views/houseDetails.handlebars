<div class="user-nav">
    <a class="all_accomodations" href="/dashboard">All Accomodations</a>
    <a class="create_post" href="/houses/add">Create Post</a>
    <a class="user_profile" href="/userProfile">User Profile</a>
    <a class="logout" href="/logout">Logout</a>
</div>

<article class="house-element">
    <div class="house-details">
        <div class="house-title">
            <h2>{{house.roomType}} {{house.roomCategory}} in {{house.city}}, {{house.state}} for ${{house.rent}}</h2>
            <h2 class="house-rating"><a href="/reviews/{{house._id}}">4/5</a></h2>
        </div>
        <p>PostDate: {{house.postDate}}</p>
    </div>
    <div class="image-carousel">
        {{#each house.imageUrls}}
            <div class="image-container">
                <img class="image" src="{{this}}" 
                alt="{{house.type}} {{house.category}} in {{house.city}}, {{house.state}} photos">
            </div>
        {{/each}}
        <a class="prev" onclick="plusSlides(-1)">Previous</a>
        <a class="next" onclick="plusSlides(1)">Next</a>
    </div>
    <br>
    <div class="address-details">
        <address>Address: {{#if house.address.line1}}{{house.address.line1}}{{else}}N/A{{/if}}, 
            {{#if house.city}}{{house.city}}{{else}}N/A{{/if}},
            {{#if house.state}}{{house.state}}{{else}}N/A{{/if}}
            {{#if house.zip}}{{house.zip}}{{else}}N/A{{/if}}
        </address>
        <p>Description: {{house.description}}</p>
    </div>
    <div class="edit-house">
        <form action="/houses/{{house._id}}/edit" method="get">
            <button type="submit">Edit</button>
        </form>
    </div>
    <div class="delete-house">
        <form action="/houses/{{house._id}}/delete" method="post" style="display:inline;">
            <button type="submit">Delete</button>
        </form>
    </div>
</article>

<h2 class="house-post">Add your review</h2>
<article class="review-form">
    <form class="center padding" action="/reviews/{{house._id}}" method="POST">
    <div>
        <label for="rating">Rating (1-5)</label>
        <input type="number" name="rating" step="0.1" min="1" max="5" required>
        <label for="review">Review:</label>
        <textarea name="review" id="reviewText" required></textarea>
        <button type="submit">Add a Review</button>
    </div>
    </form>
</article>

<article class="comments-form">
    <form method="POST" class="comments-form">
        <div>
            <label for="commentInput">Comments</label>
            <textarea name="commentInput" cols="118" rows="5" id="commentInput" ></textarea>
            <button type="submit" id="submitButton" onclick="validateComment()">Post</button>
            <span style="color:red" id="errorComment" hidden></span> <br/>
        </div>
    </form>
</article>

{{#if house.comments}}
    <h2 class="house-post">Comments:</h2>
    <article class="comment-element">
        {{#each house.comments}}
            <div class="comments-div">
                <dl class="comments-group">
                    {{this.firstName}} {{this.lastName}} {{this.commentDate}}
                </dl>
                <di class="comments-group">
                    {{this.comment}}
                </di>
            </div>
        {{/each}}
    </article>
{{/if}}

<h2 class="house-post">Reviews: </h2>
<article class="review-element">
    {{#each house.reviews}}
      <div>
        <p>Rating: {{this.rating}}</p>
        <p>Review: {{this.review}}</p>
        <p>Date: {{this.reviewDate}}</p>
        <form action="/reviews/{{../house._id}}/{{this._id}}/delete" method="post" style="display:inline;">
            <button type="submit">Delete</button>
        </form>
      </div>
    {{/each}}
</article>

<script src="../public/js/houseDetails_validator.js"></script>