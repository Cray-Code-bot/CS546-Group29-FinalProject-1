</form>

<form method="POST" class="sort-form">
    <div class="sort-group">
        <h3>Filters:</h3>
    </div>
    <div class="sort-group">
        <label for="sortBy">Sort By</label>
        <select name="sortBy" id="sortBy">
            <option value="LatestFirst">Latest First</option>
            <option value="PriceHL">Price: High to Low</option>
            <option value="PriceLH">Price: Low to High</option>
        </select>
    </div>
    <div class="sort-group">
        <label for="roomType">Room Type</label>
        <select name="roomType" id="roomType" class="search-input">
            <option value="1bhk">1 BHK</option>
            <option value="2bhk">2 BHK</option>
            <option value="3bhk">3 BHK</option>
            <option value="4bhk">4 BHK</option>
            <option value="5bhk">5 BHK+</option>
        </select>
    </div>
    <div class="sort-group">
        <label for="minPrice">Min Price</label>
        <input type="number" name="minPrice" id="minPrice">
    </div>
    <div class="sort-group">
        <label for="maxPrice">Max Price</label>
        <input type="number" name="maxPrice" id="maxPrice">
    </div>
</form>


<section class="main-element">
    <div class="row">
    {{#each houses}}
        <div class="col-md-6 mb-4">
            <h2> {{#if rent}}{{rent}}{{else}}N/A{{/if}} </h2>
            <img src ="{{#if images.[0].url}}{{images.[0].url}}{{else}}../public/images/No_Image_Available.jpg {{/if}}">
            <div class="carousel-inner">
                {{#each images}}
                    <div class="carousel-item {{#unless @index}}active{{/unless}}">
                        <img class="d-block w-100" 
                        src="{{#if this.url}}{{this.url}}{{else}}../public/images/No_Image_Available.jpg{{/if}}" 
                        alt="{{#if ../name}}{{../name}}{{else}}N/A{{/if}}"
                        style="width: 100%;">
                    </div>
                {{/each}}
            </div>
            <br>
            <address>Address: {{#if address.line1}}{{address.line1}}{{else}}N/A{{/if}}, 
                {{#if city}}{{city}}{{else}}N/A{{/if}},
                {{#if state}}{{state}}{{else}}N/A{{/if}}
                    {{#if zip}}{{zip}}{{else}}N/A{{/if}}
                </address>
            </div>
        {{/each}}
    </div>
</section>